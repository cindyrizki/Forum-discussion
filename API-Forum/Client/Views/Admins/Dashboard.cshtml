@{
    Layout = "_LayoutAdmin";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Count User (Active)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="hitungUser"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-grin fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Count Discussions
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="hitungDiskusi"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-align-justify fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Count Category
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="hitungCategory"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-list-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Count Comments ALL
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="hitungComments"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<p></p>
<div class="card">
    <div class="card bg-light mb-3" id="chartViews">
        <div class="card text-center">
            <div class="card-header">
                Jumlah Views
            </div>
        </div>
    </div>
</div>

<p></p>
<div class="card-group">
    <div class="col-6">
        <div class="card bg-light mb-3" id="chartReplies">
            <div class="card text-center">
                <div class="card-header">
                    Jumlah Komen Member dalam suatu Diskusi
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card bg-light mb-3" id="chartUserDis">
            <div class="card text-center">
                <div class="card-header">
                    Jumlah Post Diskusi yang dibuat oleh Member
                </div>
            </div>
        </div>
    </div>
</div>

<p></p>
<div class="card-group">
    <div class="col-6">
        <div class="card bg-light mb-3" id="chartCatDis">
            <div class="card text-center">
                <div class="card-header">
                    Jumlah Kategori yang dipilih di Post Diskusi
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card bg-light mb-3" id="chartGender">
            <div class="card text-center">
                <div class="card-header">
                    Gender
                </div>
            </div>
        </div>
    </div>
</div>