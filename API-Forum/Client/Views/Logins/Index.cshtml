@{
    ViewData["Title"] = "Sign In Member";
    Layout = "_LayoutLogin";
}


<div class="container">
    <div class="form col-6 mx-auto">
        <form class="user" method="post" action="/Logins/Login">
            <br /><br />
            <div class="mx-3 px-4 py-4" id="login">
                <h2><em>Sign In</em> Member</h2>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" class="form-control form-control-user"
                           id="inputEmail" aria-describedby="emailHelp"
                           placeholder="Enter Email Address...">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="password" class="form-control form-control-user"
                           id="inputPassword" placeholder="Password">
                </div>
                <div class="form-group form-check d-flex justify-content-between">
                    <div class="align-self-center ">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Remember me</label>
                    </div>
                    <a asp-area="" asp-controller="Logins" asp-action="Reset">Reset Password</a>
                </div>
                <button type="submit" class="mb-3 btn-lg btn-block">Sign In</button>
            </div>
        </form>
    </div>
</div>
        
